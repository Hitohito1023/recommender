<h1>新規投稿</h1>

<%= form_with model:@post_item, local:true do |f| %>
  <div class="post-item-new">
  	<div class="post-item-new-image">
    	<h2><%= f.label :image, "Image" %></h2>
    	<%= attachment_image_tag @post_item, :image, id: "img_prev", size:'400x500', fallback: "no_image.jpg" %></br>
    	<%= f.attachment_field :image %>
    </div>

    <script>
      $(document).on("turbolinks:load", function(){
        function readURL(input) {
          if(input.files && input.files[0]){
            var reader = new FileReader();
            reader.onload = function (e) {
              $('#img_prev').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
          }
        }
        $("#post_item_image").change(function(){
          readURL(this);
        });
      });
    </script>

    <div class="post-item-new-form">
      <h2><%= f.label :name %></h2>
      <%= f.text_field :name %>

      <h2><%= f.label :introduction %></h2>
      <%= f.text_area :introduction, size: "50x15", placeholder: "ネタバレはお控えください" %>

      <h2><%= f.label :genre_id, "Category" %></h2>
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>

      <div class="post-btn"><%= f.submit "Post", class:"btn" %></div>
    </div>
  </div>
<% end %>

<div align="right">
  <%= link_to "投稿せずに戻る", post_items_path %>
</div>

