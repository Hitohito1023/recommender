<h2>Item detail</h2>

		<table class="table">
				<tr>
					<td>
						<%#= link_to user_path(@book.user) do %>
							<%#= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%#= @book.user.name %>
						<%# end %>
					</td>
					<td><%= @post_item.name %></td>
					<td><%= @post_item.introduction %></td>
					<td><%= @post_item.genre.name %></td>
					<% if @post_item.user == current_user %>
						<td><%= link_to "Edit", edit_post_item_path(@post_item) %></td>
						<td><%= link_to "Destroy", post_item_path(@post_item), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %></td>
					<% end %>
				</tr>
		</table>