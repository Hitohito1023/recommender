<!DOCTYPE html>
<html>
  <head>
    <title>Recommenders</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/639d4d1d29.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if user_signed_in? %>
        <header>
            <h1 class="header-title">
              <%= link_to root_path do %>
                <%= image_tag 'logo.jpg' %>
              <% end %>
            </h1>
            <nav class="header-nav">
              <ul class="header-item">
                <li><i class="fas fa-crown"></i><%= link_to 'Ranking', home_ranking_path %></li>
                <li><i class="fas fa-list"></i><%= link_to 'Index', post_items_path %></li>
                <li><i class="fas fa-users"></i><%= link_to 'Users', users_path %></li>
                <li><i class="fas fa-user"></i><%= link_to 'Mypage', user_path(current_user.id) %></li>
                <li><i class="fas fa-sign-out-alt"></i><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
              </ul>
            </nav>
        </header>
        <% else %>
        <header>
            <h1 class="header-title">
              <%= link_to root_path do %>
                <%= image_tag 'logo.jpg' %>
              <% end %>
            </h1>
            <nav class="header-nav">
              <ul class="header-item">
                <li><i class="fas fa-crown"></i><%= link_to 'Ranking', home_ranking_path %></li>
                <li><i class="fas fa-list"></i><%= link_to 'Index', post_items_path %></li>
                <li><i class="fas fa-users"></i><%= link_to 'Users', users_path %></li>
                <li><i class="fas fa-user-plus"></i><%= link_to 'Signup', new_user_registration_path %></li>
                <li><i class="fas fa-sign-in-alt"></i><%= link_to 'Login', new_user_session_path %></li>
              </ul>
            </nav>
        </header>
      <% end %>


    <main>
      <p id="notice"><%= notice %></p>
      <%= render 'search/search_form' %>
      <%= yield %>
    </main>

    <footer>
      <p>Â© All rights reserved by ryota.</p>
    </footer>

  </body>
</html>
