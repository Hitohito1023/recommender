<h1 align="center">ユーザー新規登録</h1>

<div class="signup-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= render "devise/shared/error_messages", resource: resource %>
  <%= render 'layouts/error_messages', model: f.object %>


  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :profileImage, "アカウント画像（登録後でも設定が可能です）" %><br/>
    <%= attachment_image_tag @user, :profile_image, id:"img_prev", size:"100x100", fallback: "no_image_icon.jpg"%></br>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div></br>

  <div class="field">
    <%= f.label :introduction, "紹介文"%><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", placeholder: "100文字まで入力が可能です。登録後でも設定が可能です。" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上でお願い致します)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
