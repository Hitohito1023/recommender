<div class="wrap">
  <ul id="tab-menu">
    <li><a href="#tab1" class="active">投稿</a></li>
    <li><a href="#tab2" class="">User</a></li>
  </ul>

  <div id="tab-contents">
    <div id="tab1" class="tab">
      <% @post_items.each.with_index(1) do |post_item, i | %>
        <div class="tab-content">
          <p></p><h4>第<%= i %>位</h4>
          <%= link_to post_item_path(post_item) do %>
  					<%= attachment_image_tag post_item, :image, size:'200x300', fallback: "no_image.jpg" %>
  					<h5><%= post_item.name %></h5>
  				<% end %>
  				<h3>
					<i class="fas fa-coins" aria-hidden="true" style="color: yellow;"></i>
		    	<%= post_item.favorites.count %> points
		    	</h3>
        </div>
      <% end %>
    </div>

    <div id="tab2" class="tab">
	    <% @users.each.with_index(1) do |user, i | %>
        <div class="tab-user-content">
          <p></p><h4>第<%= i %>位</h4>
			    <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, size:'250x250', fallback: "no_image_icon.jpg" %>
				    <h5 align="center"><%= user.name %></h5>
			    <% end %>
          <h3 align="center">
					  <i class="fas fa-pen"></i>
		    	  <%= user.post_items.count %>件
		    	</h3>
		    </div>
	    <% end %>
    </div>
  </div>

</div>

