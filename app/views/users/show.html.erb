<div class="profile-container">
  <h3 class="profile-name">
    <%= @user.name %>
  </h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image_icon.jpg" %>
  <%= @user.introduction %>
  <% if user_signed_in? %>
    <% if @user.id == current_user.id %>
      <%= @user.email %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
  <% end %>
</div>
