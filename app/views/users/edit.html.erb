<h2>User edit</h2>

<%= form_with model:@user, local: true do |f| %>

	<!-- エラーメッセージ表示-->
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<!-- エラーメッセージ表示-->

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name, :placeholder =>"#{@user.name}" %>
	</div>

	<div class="field">
		<%= f.label :email %>
		<%= f.email_field :email, :placeholder =>"#{@user.email}"%>
	</div>


	<div class="field">
		<%= f.label :profile_image %>
		<%= f.attachment_field :profile_image, :placeholder =>"#{@user.profile_image}" %>
	</div>

	<div class="field">
		<%= f.label :introduction %>
		<%= f.text_area :introduction, :placeholder =>"#{@user.introduction}"%>
	</div>



	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>
